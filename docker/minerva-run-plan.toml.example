[global]
mode = "hourly"
actions = ["fetch", "summarize", "publish"]

[global.env]
MINERVA_LOG_LEVEL = "INFO"

[global.paths]
prompts_dir = "/data/prompts"
# Optional override for per-unit state root (defaults to /data/state/units/<unit-name>)
# unit_state_dir = "/data/state/units/hourly"

[global.options]
summary_args = "--provider openrouter"

[global.action.fetch]
args = ["--collection", "sessions"]

[global.action.publish]
args = ["--telegram-caption", "Minerva summary"]

[[unit]]
name = "hourly"
schedule = "0 * * * *"
enabled = true
mode = "hourly"

[[unit]]
name = "daily"
schedule = "0 6 * * *"
enabled = true
mode = "daily"
actions = ["podcast"]

[unit.action.podcast]
args = ["--post-to-telegram"]
